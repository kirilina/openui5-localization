<mvc:View
	controllerName="opensap.movies.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:unified="sap.ui.unified">
	<Page title="Watch Movies">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Main"
				rootLabel="Movies Page"
				contentRole="Region"
				contentLabel="Content"
				footerRole="ContentInfo"
				footerLabel="Footer"
				headerRole="Region"
				headerLabel="Watch Movies"/>
		</landmarkInfo>
		<content>
			<Image
				visible="{= !${device>/system/phone} }"
				src="images/MoviesHeader.png"
				width="100%"
				tooltip="Movie illustration"
				press="sap.m.MessageToast.show('Do you feel like going to the movies?')"/>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ColumnLayout"
				title="Find Movies"
				columnsM="2"
				columnsL="3"
				columnsXL="3">
				<f:content>
					<Label
						text="City"
						labelFor="city"/>
					<SearchField
						id="city"
						width="100%"
						showSearchButton="false"
						placeholder="Enter City"/>
					<Label
						text="Genre"
						labelFor="genre"/>
					<Select
						id="genre"
						width="100%">
						<core:ListItem icon="sap-icon://video" key="" text="All"/>
						<core:ListItem icon="sap-icon://physical-activity" key="Action" text="Action"/>
						<core:ListItem icon="sap-icon://electrocardiogram" key="Horror" text="Horror"/>
						<core:ListItem icon="sap-icon://paper-plane" key="ScienceFiction" text="Science Fiction"/>
					</Select>
					<Label/>
					<Button
						type="Emphasized"
						text="Find Movies"
						class="sapUiSmallMarginTop"
						press=".onPress('for movies!')"/>
				</f:content>
			</f:SimpleForm>
			<List
				id="moviesList"
				headerText="Showtimes - Today"
				items="{appointments>/appointments}">
				<items>
					<StandardListItem
						title="{appointments>name}"
						description="{appointments>genre}"
						icon="{appointments>pic}"
						iconDensityAware="false"
						iconInset="false" />
					<ObjectListItem
						title="{appointments>name}"
						description="{appointments>genre}"
						icon="{appointments>icon}"
						number="{
							path:'appointments>startDate',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
								source: {
									pattern: 'MM/dd/yyyy/hh:mm:ss'
								},
								pattern: 'dd.MM.yyyy HH:mm'
							}
						}">
						<firstStatus>
							<ObjectStatus
								text="Available"
								state="Success" />
						</firstStatus>
						<ObjectAttribute text="{appointments>cinemaName}" />
						<ObjectAttribute text="{appointments>cinemaAddress}" />
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Link emphasized="true" target="_blank" href="https://www.imdb.com/" text="Explore the IMDb Movie Database"/>
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
